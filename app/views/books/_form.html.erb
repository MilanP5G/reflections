  <%= form_for @book do | f | %>

  <% if @book.errors.any? %>
    <% @book.errors.messages.values.each do | msg | %>
       <% msg.each do | m | %>
         <%= m %>
       <br>
       <% end %>
    <% end %>
  <% end %>

    <%= f.label :title, "Book Title:" %>
    <%= f.text_field :title %>

    <%= f.label :author, "Book Author:" %>
    <%= f.text_field :author %>

    <%= f.label :image, "Upload Book Cover:" %>
    <%= f.file_field :image %>

   <%= f.submit "Create Book" %>

  <% end %>
