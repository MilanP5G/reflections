<%= form_for @user do | f | %>

<% if @user.errors.any? %>
  <% @user.errors.messages.values.each do | msg | %>
     <% msg.each do | m | %>
       <%= m %>
     <br>
     <% end %>
  <% end %>
<% end %>

  <%= f.label :username, "Username:" %>
  <%= f.text_field :username %><br>
  <br>
  <%= f.label :email, "Email:" %>
  <%= f.email_field :email %><br>
  <br>
  <%= f.label :password, "Password:" %>
  <%= f.password_field :password %><br>
  <br>
  <%= f.submit "Create Account" %>

<% end %>
