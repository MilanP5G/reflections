<%= form_for @user do | f | %>

<% if @user.errors.any? %>
  <div id="error">
    <% @user.errors.full_messages.each do | msg | %>
      <%= msg %>
      <br>
    <% end %>
  </div>
<% end %>

  <%= f.label :username, "Username:" %>
  <%= f.text_field :username %>

  <%= f.label :email, "Email:" %>
  <%= f.email_field :email %>

  <%= f.label :password, "Password:" %>
  <%= f.password_field :password %>

  <%= f.submit "Create Account" %>

<% end %>
