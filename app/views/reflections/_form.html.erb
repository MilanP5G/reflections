<%= form_for @reflection do | f | %>
  <%= f.hidden_field :reflection_book_id %>

  <% if @reflection.errors.any? %>
    <% @reflection.errors.messages.values.each do | msg | %>
       <% msg.each do | m | %>
         <%= m %>
       <br>
       <% end %>
    <% end %>
  <% end %>

  <%= f.label :title, "Reflection Title:" %>
  <br>
  <%= f.text_field :title %>
  <br>
  <br>
  <%= f.text_area :content, placeholder: "Free your reflection here..." %>

  <%= f.submit "Reflect" %>

<% end %>
