<%= form_for @reflection do | f | %>
  <%= f.hidden_field :reflection_book_id %>

  <% if @reflection.errors.any? %>
    <% @reflection.errors.messages.values.each do | msg | %>
       <% msg.each do | m | %>
         <%= m %>
       <br>
       <% end %>
    <% end %>
  <% end %>

 <div class="book-input">
  <%= f.text_field :title, placeholder: "Reflection Title:" %>
  <br>
  <br>
  <%= f.text_area :content, placeholder: "Free your reflection here...", class: "nr-ta" %>
  <br>
  </div>

  <%= f.submit "Reflect" %>

<% end %>
